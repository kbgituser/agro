@using Agro.Model.Dto.Intention
@using Agro.Model.PaginatedList
@* //@model PaginatedList<IntentionDto> *@
@* @model IEnumerable<Agro.Model.Dto.Intention.IntentionDto> *@
@model PaginatedList<IntentionDto>

  
@{
  ViewData["Title"] = "Заявки потребителей";
}

<h1 class="text-center">@ViewData["Title"]</h1><br />

<div class="text-center">
  <a asp-action="Create" class="btn btn-primary btn-lg btn-block">Оставьте заявку на согым</a>
  
</div>
<br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().City.Name)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.First().IntentionStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().AnimalPart)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.City.Name)
                </td>
                

                <td>
                    @Html.DisplayFor(modelItem => item.IntentionStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnimalPart)
                </td>
            <td>
                @* <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> | *@
                <a asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                @* <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a> *@
            </td>
        </tr>
}
    </tbody>
</table>

<nav aria-label="Page navigation example">
  <ul class="pagination">
    <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
      <a class="page-link" href="@Url.Action("Index", new { page = 1 })">Первый</a>
    </li>
    <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
      <a class="page-link" href="@Url.Action("Index", new { page = (Model.PageIndex - 1)>0? Model.PageIndex - 1:1 })">Предыдущий</a>
    </li>
    <li class="page-item @(Model.PageIndex >= Model.TotalPages ? "disabled" : "")">
      <a class="page-link" href="@Url.Action(nameof(Index), new { page = Model.PageIndex + 1 })">Следующий</a>
    </li>
    <li class="page-item @(Model.PageIndex >= Model.TotalPages ? "disabled" : "")">
      <a class="page-link" href="@Url.Action(nameof(Index), new { page = Model.TotalPages })">Последний</a>
    </li>
  </ul>
</nav>
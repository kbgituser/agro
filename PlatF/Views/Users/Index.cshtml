
@model IEnumerable<PlatF.Model.Entities.ApplicationUser>
@{
    ViewBag.Title = "Список пользователей";
}

<a asp-action="Create">Добавить пользователя</a>

<table class="table">
    <tr><th>Email</th><th>Телефон</th><th></th></tr>
    @foreach (var user in Model)
    {
<tr>
    <td>@user.Email</td>
    
    <td>@user.PhoneNumber</td>
    <td>
        <form asp-action="Delete" asp-route-id="@user.Id" method="post">
            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
            <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Сброс пароля</a>
            <a class="btn btn-sm btn-primary" asp-action="EditProfile" asp-route-id="@user.Id">Изменить профиль</a>
            <a class="btn btn-sm btn-primary" asp-action="EnterUserData" asp-route-id="@user.Id">Подтвердить профиль</a>
            <button type="submit" class="btn btn-sm btn-danger">
                Удалить
            </button>
        </form>
    </td>
</tr>
    }
</table>
@using Microsoft.AspNetCore.Identity
@model PlatF.Model.ViewModel.ChangeRoleViewModel
@inject PlatF.Localization.LocService SharedLocalizer

<h2>Изменение ролей для пользователя @Model.UserEmail</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
            }
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("Back")</a>
</form>